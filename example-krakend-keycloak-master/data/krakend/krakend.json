{
    "version": 3,
    "extra_config": {
        "github_com/devopsfaith/krakend-gologging": {
            "level": "DEBUG",
            "prefix": "[KRAKEND]",
            "syslog": false,
            "stdout": true,
            "format": "default"
        },
        "security/cors": {
            "allow_origins": [
                "*"
            ],
            "allow_methods": [
                "OPTIONS",
                "GET",
                "HEAD",
                "POST",
                "DELETE"
            ],
            "expose_headers": [
                "Content-Length",
                "Content-Type"
            ],
            "allow_headers": [
                "Accept-Language"
            ],
            "max_age": "12h",
            "allow_credentials": false,
            "debug": true
        }


    },
    "timeout": "10000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "name": "Test Service",
    "endpoints": [
        {
            "endpoint": "/products",
            "method": "GET",

            "extra_config": {
                "auth/validator": {
                    "alg": "RS256",
                    "jwk_url": "http://keycloak:8080/auth/realms/testRealm/protocol/openid-connect/certs",
                    "operation_debug": true,
                    "disable_jwk_security": true
                }
            },
            "output_encoding": "json",
            "concurrent_calls": 1,
            "backend": [
                {
                    "url_pattern": "/products",
                    "encoding": "json",
                    "sd": "static",
                    "extra_config": {},
                    "host": [
                        "http://productService:8080"
                    ],
                    "is_collection": true,
                    "mapping": {
                        "collection": "products"
                    }
                }
            ]
        },
        {
            "endpoint": "/product/{id}",
            "method": "GET",

            "output_encoding": "json",
            "concurrent_calls": 1,
            "backend": [
        {
            "url_pattern": "/product/{id}",
            "encoding": "json",
            "sd": "static",
            "extra_config": {
            },

            "host": [
                "http://productService:8080"
            ]

        }
    ]
        },
        {
            "endpoint": "/cart",
            "method": "GET",
            "output_encoding": "json",
            "concurrent_calls": 1,
            "input_query_strings": [
                "username"
            ],
            "backend": [
                {
                    "url_pattern": "/cart",
                    "encoding": "json",
                    "sd": "static",
                    "extra_config": {
                        "auth/validator": {
                            "alg": "RS256",
                            "jwk_url": "http://keycloak:8080/auth/realms/testRealm/protocol/openid-connect/certs",
                            "operation_debug": true,
                            "disable_jwk_security": true
                        }
                    },
                    "host": [
                        "http://cartService:8080"
                    ]

                }
            ]
        },
        {
            "endpoint": "/cart/{idItem}",
            "method": "DELETE",

            "output_encoding": "json",
            "concurrent_calls": 1,
            "input_query_strings": [
                "id"
            ],
            "backend": [
                {
                    "url_pattern": "/cart/{idItem}",
                    "encoding": "json",
                    "sd": "static",
                    "extra_config": {},
                    "host": [
                        "http://cartService:8080"
                    ]

                }
            ]
        },
        {
            "endpoint": "/cart",
            "method": "POST",

            "output_encoding": "json",
            "concurrent_calls": 1,
            "input_query_strings": [
                "username"
            ],
            "backend": [
                {
                    "url_pattern": "/cart",
                    "encoding": "json",
                    "sd": "static",
                    "extra_config": {},
                    "host": [
                        "http://cartService:8080"
                    ]

                }
            ]
        },
        {
            "endpoint": "/order",
            "method": "POST",

            "output_encoding": "json",
            "concurrent_calls": 1,
            "input_query_strings": [
                "username"
            ],
            "backend": [
                {
                    "url_pattern": "/order",
                    "encoding": "json",
                    "sd": "static",
                    "extra_config": {},
                    "host": [
                        "http://orderService:8080"
                    ]

                }
            ]
        },
        {
            "endpoint": "/order/username/{username}",
            "method": "GET",

            "output_encoding": "json",
            "concurrent_calls": 1,
            "input_query_strings": [
                "username"
            ],
            "backend": [
                {
                    "url_pattern": "/username/{username}",
                    "encoding": "json",
                    "sd": "static",
                    "extra_config": {},
                    "host": [
                        "http://orderService:8080"
                    ]

                }
            ]
        },
        {
            "endpoint": "/payment",
            "method": "POST",

            "output_encoding": "json",
            "concurrent_calls": 1,
            "input_query_strings": [
                "username"
            ],
            "backend": [
                {
                    "url_pattern": "/payment",
                    "encoding": "json",
                    "sd": "static",
                    "extra_config": {},
                    "host": [
                        "http://paymentService:8080"
                    ]

                }
            ]
        }

    ]
}

